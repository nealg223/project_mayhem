= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited the brochure from sending:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .wrapper
    %p Get the Code Academy brochure in your inbox!
    .field
      = f.label :name
      %br/
      = f.text_field :name
    .field
      = f.label :email
      %br/
      = f.text_field :email
    .field
      = check_box_tag(:mailing_list, "no", false)
      = label_tag(:mailing_list, "Sign up to get future mailings from Code Academy")
    .field
      .actions
      = f.submit(value="Sign Up")